@using CafeBlazor.Services
@inject ActionDialogService Action

<MudDialog>
    <DialogActions>
        <MudButton Style="margin-top: 0px;" OnClick="Cancel">Отменить</MudButton>
        @if (Action.CurrentAction)
        {
            <MudButton Style="margin-top: 0px; color: #784421; " Color="Color.Primary" OnClick="Submit">Выйти</MudButton>
        }
        else
        {
            <MudButton Style="margin-top: 0px; color: #784421; " Color="Color.Primary" OnClick="Submit">Удалить</MudButton>
        }
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }
    void Submit() => MudDialog?.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog?.Cancel();
}